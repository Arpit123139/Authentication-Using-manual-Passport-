<header id="header">
    <div id="codeial">
        <p>codeial</p>
    </div>
    
    <ul>
        <% if(locals.user){ %>

            <li id="name">
                <a href="/users/profile/<%=locals.user.id%>"><%= user.name %></a>
            </li>
            
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>

        <% }else{%>
            <li id="signIn">
                <a href="/users/sign-in">Sign In</a>
            </li>
            <li>
                <a href="/users/sign-up">Sign Up</a>
            </li>

        <% }%>
    </ul>

    <% if(flash.success && flash.success.length >0){ %>
        <h5>
            <%=flash.success%>
        </h5>

    <%}%>




</header>